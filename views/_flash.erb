<div id='notice' >
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<div id='error' >
  <% if flash[:errors] && !flash[:errors].empty? %>
    Please refer to the following errors:
    <ul id='errors'>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>